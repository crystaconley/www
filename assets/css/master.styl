@import '_settings'

normalize-css()
base()

bubble-blower(spaceHeight, bubbleRadius, hatDimensions)
    .spacer
        height spaceHeight

    .bubble
        border-radius 50%
        border 4px solid white
        height bubbleRadius
        width bubbleRadius
        padding ((bubbleRadius / 2.3) / 4) 0 0 0
        background-color rgba(255, 255, 255, 0.2)
        margin auto

    .hat
        height hatDimensions
        width hatDimensions

html, body
    background-color #A9A
    color #FFF

html, body, .bg, .wrapper
    width 100%
    height 100%

.wrapper, .bg
    box-sizing border-box
    position absolute
    top 0
    left 0

.bg
    background-color transparent
    background-repeat no-repeat
    background-position center center
    background-attachment fixed
    background-size cover
    opacity 0.4

.blur
    filter blur(10px)

.name, .copy, .resume
    text-shadow: 0 1px 1px rgba(0, 0, 0, 0.5)
.name
    font-family 'Pacifico', cursive
    font-size 3em
    letter-spacing 1px
    line-height 1.2em

.copy, .resume
    font-family 'Josefin Slab', serif
    font-weight bold

.copy
    font-size 1.5em

.resume
    font-size 2.5em
    text-decoration none
    color #ffec88
    transition all 200ms
    &:hover
        text-decoration underline
        color #ffd7fc

bubble-blower(80px, 120px, 85px)

@media only screen and (min-width : 320px)
    //spaceHeight, bubbleRadius, hatDimensions
    bubble-blower(80px, 120px, 80px)

@media only screen and (min-width : 480px)
    bubble-blower(120px, 170px, 120px)

@media only screen and (min-width : 768px)
    bubble-blower(150px, 200px, 140px)

@media only screen and (min-width : 992px)
    bubble-blower(150px, 210px, 150px)

@media only screen and (min-width : 1200px)
    bubble-blower(200px, 220px, 160px)
